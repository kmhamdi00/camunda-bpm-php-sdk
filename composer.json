{
  "name": "camunda-client-centreo/camunda-client",
  "description": "PHP SDK for camundaBPM process services",
  "license": "Apache-2.0",
  "minimum-stability": "stable",
  "keywords": ["sdk","camunda", "camunda bpm"],
  "homepage": "http://camunda.org",
  "authors": [
    {
      "name": "Khaled MHAMDI",
      "email": "khaled.mhamdi@coriolis.fr"
    }
  ],

  "require": {
    "php": ">=5.3.0"
  },

  "require-dev": {
    "phpunit/phpunit": "~4.6.0"
  },

  "archive": {
